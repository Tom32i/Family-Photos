<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="family_photo.browser.class">Family\PhotoBundle\Service\Browser</parameter>
        <parameter key="family_photo.twig.extension.class">Family\PhotoBundle\Twig\FamilyPhotoExtension</parameter>
    </parameters>

    <services>
        <service id="family_photo.browser" class="%family_photo.browser.class%">
            <argument>%family_photo.web%</argument>
            <argument>%family_photo.path%</argument>
        </service>

        <service id="twig.extension.family_photo_extension" class="%family_photo.twig.extension.class%">
            <argument>%family_photo.title%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
