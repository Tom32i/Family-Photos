                    <td>
                        <a href="{{ path('event', {name: event.name}) }}" id="{{ event.name }}">
                            {{ event.title }}
                        </a>
                    </td>
                    <td>
                        {{ event.date|date('d/m/Y') }}
                    </td>
                    <td>
                        {% if event.download %}
                        <a href="{{ asset(event.download.path) }}" title="T√©l√©charger {{ event.download.name }}" class="button button-outline">
