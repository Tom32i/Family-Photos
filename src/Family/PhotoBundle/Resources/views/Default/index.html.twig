{% extends '::base.html.twig' %}

{% block meta_title site_title %}

{% block body %}
{% spaceless %}
    <div class="container">
        <h1 class="title">{{ site_title }}</h1>

        <table>
            <thead>
                <tr>
                    <th>Aper√ßu</th>
